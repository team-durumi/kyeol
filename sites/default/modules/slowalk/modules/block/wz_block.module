/**
 * Implements hook_block_info().
 */
function wz_block_block_info()
{
    $blocks = array(
        'wz_main_slide' =>  array('info' => t('메인 슬라이드')),
        'wz_main_features' => array('info' => t('메인 주요 기사')),
        'wz_main_articles' => array('info' => t('메인 기타 기사')),
        'wz_main_newsletter' => array('info' => t('메인 뉴스레터')),
        'wz_footer' => array('info' => t('웹진 푸터'))
    );

    return $blocks;
}

/**
 * Implements hook_block_configure().
 */
function wz_block_block_configure($delta = '')
{
    $form = array();

    switch ($delta) {
        case 'wz_main_newsletter':
            $form['newsletter_text'] = array(
                '#type' => 'textarea',
                '#title' => '안내문',
                '#default_value' => variable_get('newsletter_text', '')
            );
        case 'wz_footer':
            $form['wz_footer'] = array(
                '#type' => 'text_format',
                '#title' => '문구',
                '#default_value' => variable_get('wz_footer', '')
            );
            break;
    }

    return $form;
}

/**
 * Implements hook_block_save().
 */
function wz_block_block_save($delta = '', $edit = array())
{
    switch ($delta) {
        case 'wz_main_newsletter':
            variable_set('newsletter_text', $edit['newsletter_text']);
            break;
        case 'wz_footer':
            variable_set('wz_footer', $edit['wz_footer']['value']);
            break;
    }
}

/**
 * Implements hook_block_view().
 */
function wz_block_block_view($delta = '')
{
    $block = array();

    switch ($delta) {
        case 'wz_main_slide':
            $block['content'] = wz_main_slide_block_view();
            break;
        case 'wz_main_features':
            $block['content'] = wz_main_features_block_view();
            break;
        case 'wz_main_articles':
            $block['content'] = wz_main_articles_block_view();
            break;
        case 'wz_main_newsletter':
            $block['content'] = wz_main_newsletter_block_view();
            break;
        case 'wz_footer':
            $block['content'] = array(
                '#type' => 'markup',
                '#markup' => variable_get('wz_footer', '')
            );
            break;
    }

    return $block;
}

function wz_main_slide_block_view()
{
    $main = new Main();                 //메인페이지
    $slide = $main->slide();            //슬라이드
    $html = '<ul class="slide">';
    foreach($slide as $item) {
        $file = file_load($item['fid']);
        $img = image_style_url('large', $file->uri);
        $html .= '<li>';
        $html .= '<img src="'.$img.'" uri="'.$file->uri.'">';
        $html .= '<div class="box">';
        $html .= '<h1>'.$item['title'].'</h1>';
        $html .= '<span class="desc">'.nl2br($item['body']).'</span>';
        $html .= '</div>';
        $html .= '</li>';
    }
    $html .='</ul>';

    $block = array(
        'slide' => array(
            '#type' => 'markup',
            '#markup' => $html
        )
    );

    return $block;
}

function wz_main_features_block_view()
{
    $main = new Main();
    $features = $main->features();
    $html = '<div id="features">';
    foreach($features as $i => $item) {
        $html .= '<dl>';
        $html .= '<dt>'.$main->featureLabel[$i].'</dt>';
        $html .= '<dd>';
        $html .= '<img src="'.$item['img'].'">';
        $html .= '<div class="content"><h2><a href="/node/'.$item['nid'].'">'.$item['title'].'</a></h2><span>'.$item['body'].'</span></div>';
        $html .= '</dd>';
        $html .= '</dl>';
    }
    $html .= '</div>';

    $block = array(
        'features' => array(
            '#type' => 'markup',
            '#markup' => $html
        )
    );

    return $block;
}

function wz_main_articles_block_view()
{
    $main = new Main();
    $articles = $main->articles();
    $html = '<ul id="articles">';
    foreach($articles as $item) {
        $html .= '<li>';
        $html .= '<img src="'.$item['img'].'">';
        $html .= '<div class="content">';
        $html .= '<span class="category">'.$item['category'].'</span>';
        $html .= '<h2><a href="/node/'.$item['nid'].'">'.$item['title'].'</a></h2>';
        $html .= '<span>'.$item['body'].'</span>';
        $html .= '</div>';
        $html .= '</li>';
    }
    $html .= '</ul>';

    $block = array(
        'articles' => array(
            '#type' => 'markup',
            '#markup' => $html
        )
    );

    return $block;
}

function wz_main_newsletter_block_view()
{
    $block = array(
        'newsletter_description' => array(
            '#type' => 'markup',
            '#markup' => '<div class="description">'.nl2br(variable_get('newsletter_text')).'</div>'
        ),
        'newsletter' => array(
            '#type' => 'textfield',
            '#attributes' => array('placeholder' => '이메일을 입력하세요')
        ),
        'submit' => array(
            '#type' => 'submit',
            '#value' => '뉴슬레터 신청하기'
        )
    );

    return $block;
}